// -*- mode: jsonc -*-
{
    /*Ajustes*/
    "height": 30,
    "spacing": 2,

    /*DistribuciÃ³n de bloques de modulos*/
    "modules-left": [
        "group/metrics",
        "wlr/taskbar",
        "custom/terminal"
    ],
    "modules-center": [
        "hyprland/workspaces",
        "custom/mediaPlayer"
    ],
    "modules-right": [
        "group/utils",
        "group/clockG",
        "group/tools"
    ],

    /*Grupos*/
    "group/metrics": {
        "orientation": "inherit",
        "modules": ["cpu", "memory", "temperature"]
    },
    "group/clockG": {
      "orientation": "inherit",
      "modules": ["clock", "custom/date"]
    },
    "group/tools": {
      "orientation": "inherit",
      "modules": ["tray", "custom/notficiationCenter"]
    },
    "group/utils": {
        "orientation": "inherit",
        "modules": ["pulseaudio", "backlight", "battery"]
    },

    /*Modulos*/
    "hyprland/workspaces": {
        "disable-scroll": false,
        "active-only": true,
        "all-outputs": true,
        "format": "{name}",
        "active-only": false
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ï€£",
            "unlocked": "ï‚œ"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "timezone": "America/Mexico_City",
        "format": "\uf017 {:%I:%M %p} "
    },
    "custom/date": {
        "format": " \ueab0 {}",
        "exec": "~/.config/waybar/scripts/date.sh",
        "interval": 60
    },
    "cpu": {
        "format": "{usage}% ï‹›",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ïƒ‰"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}Â°C {icon}",
        "format": "{temperatureC}Â°C {icon}",
        "format-icons": ["ï«", "ï‹‰", "ï©"]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["îŽ", "î“", "î‘", "î", "îŽ", "î", "îŠ", "îˆ", "îŽ›"]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% îº¡",
        "format-plugged": "{capacity}% ï‡¦",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ïƒ§",
        "performance": "ïƒ§",
        "balanced": "ï‰Ž",
        "power-saver": "ï¬"
      }
  },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) ï‡«",
        "format-ethernet": "{ipaddr}/{cidr} ïž–",
        "tooltip-format": "{ifname} via {gwaddr} ïž–",
        "format-linked": "{ifname} (No IP) ïž–",
        "format-disconnected": "Disconnected âš ",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon} ïŠ”",
        "format-bluetooth-muted": "î»¨  {icon} ïŠ”",
        "format-muted": "î»¨  {format_source}",
        "format-source": "{volume}% ï„°",
        "format-source-muted": "ï„±",
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ó±¡",
            "headset": "î¹™",
            "phone": "ï‚•",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        },
        "on-click": "pavucontrol"
    },
    "custom/mediaPlayer": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 20,
        "format-icons": {
            "playing": "",
            "paused": "",
            "stopped": "",
            "default": "ðŸŽœ"
        },
        "exec": "playerctl metadata --format '{\"text\": \"{{title}} - {{artist}}\", \"tooltip\": \"{{playerName}} : {{artist}} - {{title}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' 2>/dev/null",
        "on-click": "playerctl play-pause 2>/dev/null",
        "escape": true,
        "interval": 2,
        "exec-if": "playerctl status >/dev/null 2>&1"
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "tooltip-format": "{name}",
        "icon-size": 17,
        "on-click": "activate",
        "on-click-middle": "close",
        "short-by-app-id": false,
        "active-first": false,
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
                "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }

    },
    "custom/terminal": {
        "format": "\uf2d0",
        "on-click": "kitty",
        "tooltip-format": "Open Terminal"
    },
    "custom/notficiationCenter": {
        "format": "ïƒ³",
        "tooltip-format": "Notifications and Settings",
        "on-click": "swaync-client -t -sw"
    }
}
